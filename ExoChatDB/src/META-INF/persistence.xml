        <!-- Configurazione EclipseLink    GENERATION NONE PER NON FAR GENERARE IL DB A ECLIPSE LINK -->
        <property name="eclipselink.ddl-generation" value="none"/>
        <property name="eclipselink.logging.level" value="FINE"/>
        <!-- Disabilita l'auto-commit per gestire manualmente le transazioni CREANO UNA CONNESSIONE E DISATTIVANO L'AUTOCOMMIT -->
        <property name="eclipselink.jdbc.read-connections.min" value="1"/>
        <property name="eclipselink.jdbc.write-connections.min" value="1"/>
    </properties>
</persistence-unit>