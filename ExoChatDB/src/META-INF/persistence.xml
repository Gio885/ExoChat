
<persistence-unit name="PersistenceUnit" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>java:/ExoChat</jta-data-source>
    
    <!-- ProprietÃ  del database MySQL -->
    <properties>
